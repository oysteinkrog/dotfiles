{
  "env": {
    "ANTHROPIC_BASE_URL": "http://localhost:4800",
    "CLAUDE_ENABLE_TEAM_MODE": "1",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-sonnet-4-5-20250929"
  },
  "permissions": {
    "defaultMode": "default"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]1337;SetUserVar=%s=%s\\007' claude_state Y29tcGxldGU= && echo -e '\\007' && echo -ne '\\033]9;4;1;100\\033\\\\' && ~/.dotfiles/bin/claude-sound complete",
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]1337;SetUserVar=%s=%s\\007' claude_state aW5wdXQ= && ~/.dotfiles/bin/claude-sound input",
            "async": true
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]1337;SetUserVar=%s=%s\\007' claude_state ZXJyb3I= && ~/.dotfiles/bin/claude-sound error",
            "async": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]1337;SetUserVar=%s=%s\\007' claude_state d29ya2luZw==",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); user=$(python3 ~/.dotfiles/bin/claude-user-status.py 2>/dev/null); dir=$(echo \"$input\" | jq -r '.cwd // .workspace.current_dir // empty'); dispdir=$(echo \"$dir\" | sed 's|^/c/users/oystein|~|'); branch=$(git -C \"$dir\" symbolic-ref --short HEAD 2>/dev/null || git -C \"$dir\" rev-parse --short HEAD 2>/dev/null); printf '%s %s' \"$user\" \"$dispdir\"; [ -n \"$branch\" ] && printf ' (%s)' \"$branch\"; echo"
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": false
  },
  "syntaxHighlightingDisabled": false,
  "autoUpdatesChannel": "latest"
}

#!/bin/bash
# Wrapper that launches the Apify MCP server with credentials
# Used for reading X.com posts/articles via the Apify scraper
SECRETS_FILE="$HOME/.config/secrets/.env"
if [ -f "$SECRETS_FILE" ]; then
    while IFS= read -r line; do
        [[ "$line" =~ ^[[:space:]]*(#|$) ]] && continue
        if [[ "$line" =~ ^([A-Za-z_][A-Za-z0-9_]*)=(.*)$ ]]; then
            export "${BASH_REMATCH[1]}=${BASH_REMATCH[2]}"
        fi
    done < "$SECRETS_FILE"
fi
exec npx -y @apify/actors-mcp-server "$@"
